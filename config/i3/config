# Mouse and touchpad

# The middle button and a modifer over any part of the window kills the window
 bindsym --whole-window $mod+button2 kill

mouse_warping none
focus_follows_mouse no

# set natural scrolling and tapping enabled
exec --no-startup-id $HOME/.config/i3/touchpad.sh


# Reload and exit

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Resize windows

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"


# Mode_system

bindsym $mod+Pause mode "$mode_system"
bindsym $mod+End mode "$mode_system"

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l               exec --no-startup-id $HOME/.config/i3/i3exit.sh lock, mode "default"
    bindsym e               exec --no-startup-id $HOME/.config/i3/i3exit.sh logout, mode "default"
    bindsym s               exec --no-startup-id $HOME/.config/i3/i3exit.sh suspend, mode "default"
    bindsym h               exec --no-startup-id $HOME/.config/i3/i3exit.sh hibernate, mode "default"
    bindsym r               exec --no-startup-id $HOME/.config/i3/i3exit.sh reboot, mode "default"
    bindsym Shift+s         exec --no-startup-id $HOME/.config/i3/i3exit.sh shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


# Audio control

#Volume
exec --no-startup-id amixer -D pulse set Master '10%'
bindsym XF86AudioRaiseVolume    exec amixer -D pulse set Master '5%+'
bindsym XF86AudioLowerVolume    exec amixer -D pulse set Master '5%-'

bindsym Shift+KP_Add            exec amixer -D pulse set Master '5%+'
bindsym Shift+KP_Subtract       exec amixer -D pulse set Master '5%-'

bindsym XF86AudioMute           exec amixer -D pulse set Master toggle
bindsym Shift+KP_Multiply       exec amixer -D pulse set Master toggle

bindsym $mod+F1                 exec $HOME/.config/i3/scripts/mic_toogle.sh

#Spotify player controls
bindsym XF86AudioPlay           exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym Shift+KP_5              exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"

bindsym XF86AudioNext           exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
bindsym Shift+KP_6              exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"

bindsym XF86AudioPrev           exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
bindsym Shift+KP_4              exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"

bindsym XF86AudioStop           exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Stop"


