# Mode_system


bindsym $mod+Pause mode "$mode_system"
bindsym $mod+End mode "$mode_system"
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id ~/.config/i3/i3exit.sh lock, mode "default"
    bindsym e exec --no-startup-id ~/.config/i3/i3exit.sh logout, mode "default"
    bindsym s exec --no-startup-id ~/.config/i3/i3exit.sh suspend, mode "default"
    bindsym h exec --no-startup-id ~/.config/i3/i3exit.sh hibernate, mode "default"
    bindsym r exec --no-startup-id ~/.config/i3/i3exit.sh reboot, mode "default"
    bindsym Shift+s exec --no-startup-id ~/.config/i3/i3exit.sh shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


# Audio - needs correct

#exec "amixer -D pulse sset Master '50%'" && pkill -RTMIN+11 i3blocks

#Volume
bindsym XF86AudioRaiseVolume exec amixer -D pulse sset Master '5%+' && pkill -RTMIN+11 i3blocks
bindsym XF86AudioLowerVolume exec amixer -D pulse sset Master '5%-' && pkill -RTMIN+11 i3blocks

bindsym Shift+KP_Subtract exec amixer -q set Master '5%-' && pkill -RTMIN+11 i3blocks
bindsym Shift+KP_Add exec amixer -q set Master '5%+' && pkill -RTMIN+11 i3blocks

bindsym XF86AudioMute exec amixer -D pulse set Master toggle && pkill -RTMIN+11 i3blocks
bindsym Shift+KP_Multiply exec amixer -D pulse set Master toggle && pkill -RTMIN+11 i3blocks

#Player controls
#added sleep because sometimes script was too fast and than "lost", it solved the problem

bindsym XF86AudioPlay exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause && sleep 0.1 && pkill -RTMIN+12 i3blocks"

bindsym Shift+KP_5 exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause  && sleep 0.1 && pkill -RTMIN+12 i3blocks"

bindsym XF86AudioNext exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next  && sleep 0.1 && pkill -RTMIN+12 i3blocks"

bindsym Shift+KP_6 exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next  && sleep 0.1 && pkill -RTMIN+12 i3blocks"

bindsym XF86AudioPrev exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous  && sleep 0.1 && pkill -RTMIN+12 i3blocks"

bindsym Shift+KP_4 exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous  && sleep 0.1 && pkill -RTMIN+12 i3blocks"

bindsym XF86AudioStop exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Stop  && sleep 0.1 && pkill -RTMIN+12 i3blocks"



